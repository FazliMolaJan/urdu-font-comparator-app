<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="projects.hobby.urdufontcomparator.fragments.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_8">

        <RelativeLayout
            android:id="@+id/layout_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@drawable/background_border"
            android:padding="@dimen/margin_8">

            <LinearLayout
                android:id="@+id/select_font_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_selected_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceMedium" />

                <Button
                    android:id="@+id/btn_choose_font"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_font" />
            </LinearLayout>

            <TextView
                android:id="@+id/textview_fontsize_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/select_font_layout"
                android:layout_below="@+id/select_font_layout"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:text="@string/select_font_size"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_12" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/select_font_layout"
                android:layout_below="@+id/textview_fontsize_label"
                android:layout_marginTop="@dimen/margin_8" />


            <Button
                android:id="@+id/button_font_details"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekbar"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_8"
                android:text="@string/font_details" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_controls"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/background_border"
            android:fitsSystemWindows="true"
            android:padding="@dimen/margin_8">

            <TextView
                android:id="@+id/text_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill|center_horizontal"
                android:lineSpacingExtra="@dimen/text_size_16"
                android:padding="@dimen/margin_8"
                android:textDirection="rtl"
                android:textSize="@dimen/text_size_16"
                tools:text="@string/urdu_sample_text_poetry" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

